<%= div_for comment do %>
 <h3>
   <%= comment.name %> &lt;<%= comment.email %>&gt; said:
   <% if @post.owned_by? current_user %>
     <span class='actions'>
       <%= link_to 'delete', [@post, comment], :confirm => 'are you sure?', :method => :delete %>
     </span>
    <% end %>
  </h3>
  <%= comment.body %>
<% end %>